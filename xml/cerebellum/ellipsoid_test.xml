<?xml version="1.0" encoding="UTF-8"?>
<nineml>
    <network id="Ellipsoid_Test">
        <simulationDefaults>
            <temperature value="23" />
        </simulationDefaults>
        <extensions>
            <engine id="Brep" cmd="brep" resource="brep_filename_goes_here.xml" output="build/brep" />
        </extensions>
        <!-- Populations -->
        <population id="PostsynapticPop" cell="IF_curr_alpha">
            <structure type="Extension" engine="Brep" id="EllipseTest" />
        </population>
        <population id="PresynapticPop" cell="SpikeSourceArray">
            <structure type="Extension" engine="Brep" id="EllipseTest" />
        </population>
        <!-- Projections -->
        <projection id="PresynapticPop_PostsynapticPop_">
            <source id="PresynapticPop" />
            <destination id="PostsynapticPop" synapse="excitatory" />
            <connection pattern="DisplacementBased" geometry="EllipsoidMask" scale="0.5" orient_x="1.0" orient_y="0.0" orient_z="0.0" isotropy="1.0" />
            <weight pattern="DisplacementBased" geometry="ExponentialWith2DDistance" scalar="2.6 nS"
                exponent="-0.01" />
            <delay pattern="DisplacementBased" geometry="LinearWith2DDistance" scalar="2 us/um" />
        </projection>
    </network>
</nineml>
