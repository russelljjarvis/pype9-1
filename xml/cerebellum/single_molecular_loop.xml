<?xml version="1.0" encoding="UTF-8"?>
<nineml>
    <network id="SingleLoopGranularLayer">
        <freeParameters>
            <flags>
                <flag id="NoMossyFiber2GranuleAMPA" default="False" />
                <flag id="NoMossyFiber2GranuleNMDA" default="False" />
                <flag id="NoMossyFiber2Golgi" default="False" />
                <flag id="NoGranulesGolgi" default="False" />
                <flag id="NoGolgi2Granule" default="False" />                                                
            </flags>
        </freeParameters>
        <simulationDefaults>
            <temperature value="23" />
        </simulationDefaults>
        <population id="Granules" cell="Granule" size="1" />
        <population id="Golgis" cell="Golgi" size="1" morphology="WithoutAxon" />
        <population id="MossyFibers" cell="SpikeSourceArray" size="100" />
        <projection id="MossyFibers_Granules_AMPA" not_flags="NoMossyFiber2GranuleAMPA">
            <source id="MossyFibers" />
            <destination id="Granules" synapse="AMPA" segment="soma" />
            <connection pattern="AllToAll" />
            <weight pattern="Constant" value="1.3e-3" />
            <delay pattern="Constant" value="0.025" />
        </projection>
        <projection id="MossyFibers_Granules_NMDA" not_flags="NoMossyFiber2GranuleNMDA">
            <source id="MossyFibers" />
            <destination id="Granules" synapse="NMDA" segment="soma" />
            <connection pattern="AllToAll" />
            <weight pattern="Constant" value="0.1122e-3" />
            <delay pattern="Constant" value="0.025" />
        </projection>
        <projection id="MossyFibers_Golgis" not_flags="NoMossyFiber2Golgi">
            <source id="MossyFibers" />
            <destination id="Golgis" synapse="AMPA_MossyFiber" segment="soma" />
            <connection pattern="AllToAll" />
            <weight pattern="Constant" value="1.3e-3" />
            <delay pattern="Constant" value="0.025" />
        </projection>        
        <projection id="Granules_Golgis" not_flags="NoGranulesGolgi">
            <source id="Granules" />
            <destination id="Golgis" synapse="AMPA_Granule" segment="soma" />
            <connection pattern="AllToAll" />
            <weight pattern="Constant" value="1.3e-3" />
            <delay pattern="Constant" value="0.3" />
        </projection>
        <projection id="Golgis_Granules" not_flags="NoGolgi2Granule">
            <source id="Golgis" />
            <destination id="Granules" synapse="GABA" segment="soma" />
            <connection pattern="AllToAll" />
            <weight pattern="Constant" value="1.4e-3" />
            <delay pattern="Constant" value="0.025" />
        </projection>     
    </network>
</nineml>